

pagelist(disable-selection) {
	overflow: hidden;
	text-align: right;
}

pagelist [
	normal(cl-normal, font-caption) {
		cursor: pointer;
		/*float: right;*/
		display: inline-block;
		padding: 2px;
	}
	hover(normal, cl-hover, bg-hover) {}
	active(normal, cl-active, bg-active) {}
	selected(normal) {
		cursor: default;
		padding: 0 2px 2px 2px;
		border-top: solid 2px ${border-color-active};
	}
]


